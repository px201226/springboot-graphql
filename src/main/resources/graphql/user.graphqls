type User {
    id: Float!
    name: String!
    email: String!
    posts: [Post]
    comments: [Comment]
}

input UserInput {
    name: String!
    email: String!
}

type Query {
    findAllUser : [User]!
    findByUserId(id: Float) : User
}

type Mutation {
    addUser(input: UserInput) : User
}

schema {
    query: Query
    mutation: Mutation
}